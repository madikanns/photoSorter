# StockPrediction Backend Environment Variables

# Application
APP_NAME=StockPrediction
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database (PostgreSQL)
DATABASE_URL=postgresql://stockprediction:password123@localhost:5432/stockprediction
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO

# API Keys (Optional - for real data)
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
NEWS_API_KEY=your-news-api-key
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=StockPrediction/1.0

# ML Model Settings
MODEL_UPDATE_INTERVAL=3600
PREDICTION_HORIZON_DAYS=7
SENTIMENT_UPDATE_INTERVAL=300
LSTM_SEQUENCE_LENGTH=60
LSTM_UNITS=50
LSTM_DROPOUT=0.2

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Data Collection
MAX_NEWS_ARTICLES=1000
MAX_TWEETS=500
MAX_REDDIT_POSTS=200
